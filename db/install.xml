<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/biblio_enspy/db" VERSION="20260116" COMMENT="XMLDB file for Moodle local/biblio_enspy">
  <TABLES>
    <TABLE NAME="local_biblio_notif_sync" COMMENT="Table de synchronisation entre Firestore et Moodle notifications">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="firestore_id" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="ID du document Firestore"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID utilisateur Moodle"/>
        <FIELD NAME="user_email" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Email utilisateur (userId dans Firestore)"/>
        <FIELD NAME="moodle_notification_id" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="ID de la notification Moodle"/>
        <FIELD NAME="notification_type" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="Type de notification"/>
        <FIELD NAME="firestore_timestamp" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Timestamp Firestore"/>
        <FIELD NAME="is_read" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Statut de lecture"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid_fk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="firestore_id_idx" UNIQUE="true" FIELDS="firestore_id"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="user_email_idx" UNIQUE="false" FIELDS="user_email"/>
        <INDEX NAME="is_read_idx" UNIQUE="false" FIELDS="is_read"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>